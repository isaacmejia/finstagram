<!doctype html>

<html>
    <head>
        <link rel="stylesheet" href="/stylesheets/normalize.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300italic,700italic,700,300">
        <link rel="stylesheet" href="/stylesheets/lib.css">
        <link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400&display=swap" rel="stylesheet">
        <title>Finstagram</title> 
    </head>
    <body>
        <header>
            <h1>
                <a href="/">Finstagram</a>
            </h1>
            <div class="login-info">
                <% if current_user %>
                    <img src='<%= current_user.avatar_url %>' alt = '<%= current_user.username %>'>
                    <span><%= current_user.username %></span>
                    <a href="/logout">Logout</a>
                <% else %>
                    <a href="/login">Login</a>
                    <a href="/signup">Signup</a>
                <% end %>
            </div>
        </header>
        <main role="main">
            <%= yield %>
        </main>
    </body>
</html>